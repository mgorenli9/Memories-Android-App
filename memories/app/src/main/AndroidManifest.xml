<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mehmet.memories">

    <!-- storage izni aldÄ±k-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/memories_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Klon_insta"
        tools:targetApi="31">
        <activity
            android:name="com.mehmet.memories.view.UploadActivity"
            android:exported="false"
            android:parentActivityName=".view.FeedActivity"/>
        <activity
            android:name="com.mehmet.memories.view.FeedActivity"
            android:exported="false" />
        <activity
            android:name="com.mehmet.memories.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>